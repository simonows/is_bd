<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>regauth</servlet-name>
        <servlet-class>com.servletcrud.service.Regauth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegistration</servlet-name>
        <servlet-class>com.servletcrud.service.UserRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLogin</servlet-name>
        <servlet-class>com.servletcrud.service.CheckLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>com.servletcrud.service.UserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.servletcrud.service.Logout</servlet-class>
    </servlet>
      <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cabinet</servlet-name>
        <servlet-class>com.servletcrud.user.Cabinet</servlet-class>
    </servlet>
      <servlet-mapping>
        <servlet-name>Cabinet</servlet-name>
        <url-pattern>/cabinet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TSearch</servlet-name>
        <servlet-class>com.servletcrud.user.TSearch</servlet-class>
    </servlet>
      <servlet-mapping>
        <servlet-name>TSearch</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Tickets</servlet-name>
        <servlet-class>com.servletcrud.user.Tickets</servlet-class>
    </servlet>
      <servlet-mapping>
        <servlet-name>Tickets</servlet-name>
        <url-pattern>/tickets</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Settings</servlet-name>
        <servlet-class>com.servletcrud.user.Settings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Settings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.servletcrud.user.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/cabinet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/search</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>NewsController</servlet-name>
        <servlet-class>com.servletcrud.service.NewsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsController</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regauth</servlet-name>
        <url-pattern>/regauth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegistration</servlet-name>
        <url-pattern>/UserRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>CheckLogin</servlet-name>
        <url-pattern>/CheckLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.servletcrud.service.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>-1</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <path>/</path>
            <!-- Cookie lifetime in seconds -->
            <max-age>900</max-age>
        </cookie-config>
    </session-config>
</web-app>
